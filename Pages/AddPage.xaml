<Page x:Class="PagesWpf.Pages.AddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PagesWpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPage">

    <StackPanel Margin="20">
        <TextBox x:Name="NameBox" Text="Введите название"/>
        <TextBox x:Name="PriceBox" Text="Введите цену" Margin="0,10,0,0"/>
        <Button Content="Сохранить изменения" Click="Save_Click" Margin="0,10,0,0"/>
    </StackPanel>
</Page>